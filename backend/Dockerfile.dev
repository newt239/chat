FROM golang:1.23-alpine

# Install Atlas CLI
RUN apk add --no-cache curl && \
    curl -sSf https://atlasgo.sh | sh

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Run directly without air (Docker's volume mount provides hot reload via restart)
CMD ["go", "run", "./cmd/server"]
