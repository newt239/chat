# データベース設定
POSTGRES_DB=chat
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=chat-postgres-preview
POSTGRES_PORT=5432
PREVIEW_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}_preview?sslmode=disable

# バックエンド設定
# 注意: 本番環境のPORT(8080)と重複しないポート番号を指定してください
PREVIEW_PORT=8081
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
CORS_ALLOWED_ORIGINS=https://preview.chat.newt239.dev

# Wasabi S3設定
WASABI_ACCESS_KEY_ID=your_wasabi_access_key
WASABI_SECRET_ACCESS_KEY=your_wasabi_secret_key
WASABI_BUCKET_NAME=your_bucket_name
WASABI_REGION=ap-northeast-1
WASABI_ENDPOINT=https://ap-northeast-1.s3.wasabisys.com

# Caddy設定
# 注意: ブランチごとに異なるポート番号を指定してください
CADDY_HTTP_PORT=8080
CADDY_HTTPS_PORT=8443
PREVIEW_DOMAIN=preview.chat.newt239.dev
CADDY_EMAIL=contact@newt239.dev
